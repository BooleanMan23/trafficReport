<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/namaJalanTextViewEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Jalan" />

    <EditText
        android:id="@+id/namaJalanEditTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:lines="1" />

    <TextView
        android:id="@+id/deskripsiTextViewEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi Keadaan jalan" />

    <EditText
        android:id="@+id/deskripsiEditTextEdit"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@null"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textSize="20sp" />



    <Button
        android:id="@+id/mapButtonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Lokasi di map" />

    <TextView
        android:id="@+id/lokasiDiMapTextViewEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi pada map" />

    <Button
        android:id="@+id/updateButtonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Update Traffic" />

    <Button
        android:id="@+id/deleteButtonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Delete Traffic" />





</LinearLayout>